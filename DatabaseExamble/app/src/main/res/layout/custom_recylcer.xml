<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/custom_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/custom_img"
                android:text="Model"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/custom_model"
                android:drawableStart="@drawable/ic_car"
                android:drawablePadding="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="18sp"
                android:layout_below="@id/custom_model"
                android:layout_marginTop="22dp"
                android:drawableStart="@drawable/ic_psint"
                android:drawablePadding="2dp"
                android:id="@+id/custom_color"/>
            <TextView
                android:id="@+id/custom_dpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Dpl"
                android:drawableStart="@drawable/ic_gas"
                android:drawablePadding="2dp"
                android:layout_toRightOf="@id/custom_color"
                android:layout_below="@id/custom_model"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="66dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>